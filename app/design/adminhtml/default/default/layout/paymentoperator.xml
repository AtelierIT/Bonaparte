<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<default>
        <reference name="head">
            <action method="addCss"><name>paymentoperator.css</name></action>
        </reference>
		<reference name="js">
			<block type="core/template" name="depends_allallowedcountries" template="paymentoperator/depends/allallowedcountries.phtml"/>
			<block type="core/template" name="depends_ipzones" template="paymentoperator/depends/ipzones.phtml"/>
		</reference>
        <reference name="notifications">
            <block type="paymentoperator/adminhtml_notification_secureurl" name="paymentoperator_notification_secureurl" as="paymentoperator_notification_secureurl" template="paymentoperator/notification/secureurl.phtml" />
            <block type="paymentoperator/adminhtml_notification_paymentdepends" name="paymentoperator_notification_paymentdepends" as="paymentoperator_notification_paymentdepends" template="paymentoperator/notification/paymentdepends.phtml" />
        </reference>
	</default>

    <adminhtml_sales_order_view>
        <reference name="sales_order_tabs">
            <action method="addTab"><name>paymentoperator_action</name><block>paymentoperator/adminhtml_sales_order_view_tab_action</block></action>
        </reference>
    </adminhtml_sales_order_view>

    <adminhtml_sales_order_index>
        <reference name="sales_order.grid">
            <action method="addColumn">
                <index>paymentoperator_transaction_id</index>
                <array>
                    <header>PO RefNr</header>
                    <title>PaymentOperator Reference Number</title>
                    <index>paymentoperator_transaction_id</index>
                    <type>text</type>
                    <width>65px</width>
                    <renderer>paymentoperator/widget_grid_column_renderer_zerofill</renderer>
                </array>
            </action>
            <action method="addColumnsOrder">
                <columnId>paymentoperator_transaction_id</columnId>
                <after>real_order_id</after>
            </action>
        </reference>
    </adminhtml_sales_order_index>

    <adminhtml_sales_order_grid>
        <reference name="sales_order.grid">
            <action method="addColumn">
                <index>paymentoperator_transaction_id</index>
                <array>
                    <header>CT RefNr</header>
                    <title>PaymentOperator Reference Number</title>
                    <index>paymentoperator_transaction_id</index>
                    <type>text</type>
                    <width>65px</width>
                    <renderer>paymentoperator/widget_grid_column_renderer_zerofill</renderer>
                </array>
            </action>
            <action method="addColumnsOrder">
                <columnId>paymentoperator_transaction_id</columnId>
                <after>real_order_id</after>
            </action>
        </reference>
    </adminhtml_sales_order_grid>
</layout>